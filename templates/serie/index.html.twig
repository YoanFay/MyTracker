{% extends 'base.html.twig' %}

{% block title %}SÃ©ries{% endblock %}

{% block body %}

    <div class="col-12 d-flex flex-row justify-content-between flex-wrap">
        {% for serie in series %}
            {% set image = infoImage(serie.entity, app.environment) %}
            <div class="cursor-click container col-2 px-3 my-4 d-flex flex-column" onclick="openDetail('{{ path('serie_detail', {'id': serie.id}) }}')">
                <img class="rounded mx-auto d-block" src="{{ image.path }}" width="150px" alt="{{ image.alt }}">
                <p class="text-center">{{ serie.name }}</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% block javascript %}
    <script>

        jQuery(document).ready(function ($) {
            $(".clickable-row").click(function () {
                window.location = $(this).data("href");
            });
        });

        function openDetail(href){
            window.location = href;
        }

    </script>
{% endblock %}
