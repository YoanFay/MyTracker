            $('#' + nav_link_id).closest('li').addClass('mm-active');
            $('#' + nav_link_id + '-a').attr('aria-expanded', true);
            $('#' + nav_link_id).addClass('mm-show');
            $('#' + nav_link_id).closest('.collapse').addClass('show');

