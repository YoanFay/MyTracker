    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>

    <body>
        <div class="col-12 d-flex flex-row">
            <div class="col-2 border-end p-2">
                <ul>
                                                    <li>
                                                        <i class="metismenu-icon material-icons">home</i>
                                                        <a id="episodes-liste" class="nav-links-child"
                                                           href="{{ path('home') }}">Accueil</a>
                                                    </li>
                    <li>
                                        <a data-bs-toggle="collapse" href="#activateEpisodes" role="button" aria-expanded="false" aria-controls="collapseExample">
                                            <i class="metismenu-icon material-icons">live_tv</i>
                                            Épisodes
                                            <i class="metismenu-state-icon material-icons">expand_more</i>
                                        </a>
                                        <div class="collapse" id="activateEpisodes">
                                            <ul id="episode">
                                                    <li>
                                                        <i class="metismenu-icon material-icons">list</i>
                                                        <a id="episodes-liste" class="nav-links-child"
                                                           href="{{ path('episode') }}">Liste</a>
                                                    </li>
                                            </ul>
                                            <ul id="episode">
                                                    <li>
                                                        <i class="metismenu-icon material-icons">add</i>
                                                        <a id="episodes-liste" class="nav-links-child"
                                                           href="{{ path('episode_add') }}">Ajouter</a>
                                                    </li>
                                            </ul>
                                        </div>
                    </li>
                    <li>
                                        <a data-bs-toggle="collapse" href="#activateSeries" role="button" aria-expanded="false" aria-controls="collapseExample">
                                            <i class="metismenu-icon material-icons">subtitles</i>
                                            Séries
                                            <i class="metismenu-state-icon material-icons">expand_more</i>
                                        </a>
                                        <div class="collapse" id="activateSeries">
                                            <ul id="serie">
                                                    <li>
                                                        <i class="metismenu-icon material-icons">list</i>
                                                        <a id="episodes-liste" class="nav-links-child"
                                                           href="{{ path('serie') }}">Liste</a>
                                                    </li>
                                            </ul>
                                            <ul id="episode">
                                                    <li>
                                                        <i class="metismenu-icon material-icons">add</i>
                                                        <a id="episodes-liste" class="nav-links-child"
                                                           href="{{ path('serie_add') }}">Ajouter</a>
                                                    </li>
                                            </ul>
                                        </div>
                    </li>
                    <li>
                                        <a data-bs-toggle="collapse" href="#activateFilms" role="button" aria-expanded="false" aria-controls="collapseExample">
                                            <i class="metismenu-icon material-icons">movie</i>
                                            Films
                                            <i class="metismenu-state-icon material-icons">expand_more</i>
                                        </a>
                                        <div class="collapse" id="activateFilms">
                                            <ul id="film">
                                                    <li>
                                                        <i class="metismenu-icon material-icons">list</i>
                                                        <a id="episodes-liste" class="nav-links-child"
                                                           href="{{ path('movie') }}">Liste</a>
                                                    </li>
                                            </ul>
                                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-10">
                {% block body %}{% endblock %}
            </div>
        </div>
        <div id="snackbar"></div>
    </body>
</html>

{% for message in app.flashes('success') %}
    <script>
        $('#snackbar').html('{{ message }}').addClass('show');

        // After 3 seconds, remove the show class from DIV
        setTimeout(function () {
            $('#snackbar').removeClass('show');
        }, 3000);
    </script>
{% endfor %}

{% for message in app.flashes('error') %}
    <script>
        $('#snackbar').html('{{ message }}').addClass('show').css('background-color', '#b61318');

        // After 3 seconds, remove the show class from DIV
        setTimeout(function () {
            $('#snackbar').removeClass('show');
        }, 3000);
    </script>
{% endfor %}

