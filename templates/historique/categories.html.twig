{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <table class="table table-hover">
        <thead class="thead-light">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Heure de visionnage</th>
        </tr>
        </thead>

        {% for dateKey, data in dataByDate %}
            <tbody>

            <tr class="table-secondary">
                <th colspan="4">
                    {{ dateKey|dateF }} - {{ data.totalDuration|MsToHM }} de visionnage
                </th>
            </tr>
            </tbody>
            <tbody id="row{{ dateKey|date('U') }}">
            <div>
                {% for show in data.history|sort((a, b) => a.show <=> b.show) %}
                    <tr>
                        <td>
                            {% if categorie == 'movie' %}
                                <a class="text-decoration-none text-black"
                                   href="{{ path('movie_detail', {'id': show.id }) }}">{{ show.name }}</a>
                            {% else %}
                                <a class="text-decoration-none text-black"
                                   href="{{ path('serie_detail', {'id': show.id }) }}">{{ show.name }}</a>
                            {% endif %}
                        </td>
                        <td>{{ show.show|date("H\\hi") }}</td>
                    </tr>
                {% endfor %}
            </div>
            </tbody>
        {% endfor %}
    </table>

    <div class="ms-3">
        <p>{{globalDuration|MsToHM}} {{ text }} regard√© en {{ "now"|date('Y') }} / {{ globalDurationAverage|MsToHM }} de visionnage en moyenne par jour en {{ "now"|date('Y') }}</p>
    </div>

{% endblock %}

{% block javascript %}
    <script>

        function displayRow(id) {
            var row = $('#row' + id);

            row.toggleClass('d-none');
        }

    </script>
{% endblock %}
