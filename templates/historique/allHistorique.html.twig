{% extends 'base.html.twig' %}

{% block title %}Épisodes{% endblock %}

{% block body %}

    <table class="table table-hover">
        <thead class="thead-light">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Heure de visionnage</th>
        </tr>
        </thead>

        {% for dateKey, data in dataByDate %}
            <tbody>

            <tr class="table-secondary">
                <th colspan="4" {# OnClick="displayRow({{dateKey|date('U')}})" #}>
                    {{ dateKey|dateF }}
                    - {{ data.totalDuration|MsToHM }} de visionnage
                    -
                    {{ data.animeDuration|MsToHM }} d'animes / {{ data.serieDuration|MsToHM }} de séries
                    / {{ data.replayDuration|MsToHM }} de replay / {{ data.movieDuration|MsToHM }} de films
                </th>
            </tr>
            </tbody>
            <tbody id="row{{ dateKey|date('U') }}" {# class="d-none" #}>
            {% set prev = 0 %}
            <div>
                {% for show in data.history|sort((a, b) => a.show <=> b.show) %}
                    <tr>
                        <td>
                            {% if show.type == 'Movie' %}
                                <a class="text-decoration-none text-black"
                                   href="{{ path('movie_detail', {'id': show.id }) }}">{{ show.name }}</a>
                                {%else%}
                                <a class="text-decoration-none text-black"
                                   href="{{ path('serie_detail', {'id': show.id }) }}">{{ show.name }}</a>
                            {% endif %}
                        </td>
                        <td>{{ show.show|date("H\\hi") }}</td>
                    </tr>
                {% endfor %}
            </div>
            </tbody>
        {% endfor %}
    </table>

    <div class="ms-3">
        <p>{{ globalDuration.total|MsToHM }} de visionnage en moyenne par jour / {{ globalDuration.anime|MsToHM }}
            d'animes
            / {{ globalDuration.serie|MsToHM }} de séries
            / {{ globalDuration.replay|MsToHM }} de replay
            / {{ globalDuration.movie|MsToHM }} de films</p>
    </div>

{% endblock %}

{% block javascript %}
    <script>

        function displayRow(id) {
            var row = $('#row' + id);

            row.toggleClass('d-none');
        }

    </script>
{% endblock %}
