{% extends 'base.html.twig' %}

{% block title %}Hello TestApiController!{% endblock %}

{% block body %}
    <style>
      .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
      }

      .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
      }
    </style>

    <div class="example-wrapper">

        <table class="table table-hover table-striped table-bordered">
            <thead>
            <tr>
                <th scope="col" class="col-lg-8 col-6">Nom</th>
                <th scope="col" class="col-lg-2 col-1">Status</th>
                <th scope="col" class="col-lg-2 col-3">Studio</th>
            </tr>
            </thead>
            <tbody>
            {% for anime in animes %}
                <tr>
                    <td>{{ anime.name }}</td>
                    <td>{{ anime.status }}</td>
                    <td>{{ anime.studio }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
