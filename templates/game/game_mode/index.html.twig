{% extends 'base.html.twig' %}

{% block title %}GameMode index{% endblock %}

{% block body %}
    <h1>GameMode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game_mode in game_modes %}
            <tr>
                <td>{{ game_mode.id }}</td>
                <td>{{ game_mode.name }}</td>
                <td>
                    <a href="{{ path('game_mode_show', {'id': game_mode.id}) }}">show</a>
                    <a href="{{ path('game_mode_edit', {'id': game_mode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_mode_new') }}">Create new</a>
{% endblock %}
