{% extends 'base.html.twig' %}

{% block title %}GameTheme index{% endblock %}

{% block body %}
    <h1>GameTheme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game_theme in game_themes %}
            <tr>
                <td>{{ game_theme.id }}</td>
                <td>{{ game_theme.name }}</td>
                <td>
                    <a href="{{ path('game_theme_show', {'id': game_theme.id}) }}">show</a>
                    <a href="{{ path('game_theme_edit', {'id': game_theme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_theme_new') }}">Create new</a>
{% endblock %}
