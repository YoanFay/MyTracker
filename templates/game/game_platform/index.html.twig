{% extends 'base.html.twig' %}

{% block title %}GamePlatform index{% endblock %}

{% block body %}
    <h1>GamePlatform index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game_platform in game_platforms %}
            <tr>
                <td>{{ game_platform.id }}</td>
                <td>{{ game_platform.name }}</td>
                <td>
                    <a href="{{ path('game_platform_show', {'id': game_platform.id}) }}">show</a>
                    <a href="{{ path('game_platform_edit', {'id': game_platform.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_platform_new') }}">Create new</a>
{% endblock %}
