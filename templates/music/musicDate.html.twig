{% extends 'base.html.twig' %}

{% block title %}Ã‰pisodes{% endblock %}

{% block body %}

    <table class="table table-hover">
        <thead class="thead-light">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Heure de visionnage</th>
        </tr>
        </thead>

        {% for dateKey, data in dataByDate %}
            <tbody>

            <tr class="table-secondary">
                <th colspan="4">
                    {{ dateKey|dateF }}
                    - {{ data.totalDuration|MsToHM }} de visionnage
                </th>
            </tr>
            </tbody>
            <tbody id="row{{ dateKey|date('U') }}">
            <div>
                {% for show in data.history|sort((a, b) => a.show <=> b.show) %}
                    <tr>
                        <td>
                                <a class="text-decoration-none text-black"
                                   href="{{ path('music_detail', {'id': show.id }) }}">{{ show.name }}</a>
                        </td>
                        <td>{{ show.show|date("H\\hi") }}</td>
                    </tr>
                {% endfor %}
            </div>
            </tbody>
        {% endfor %}
    </table>

    <div class="ms-3">
        <p>{{ globalDuration|MsToHM }} de visionnage en moyenne par jour en {{month}} {{year}}
        </p>
    </div>

{% endblock %}

{% block javascript %}
<script>
    
    function displayRow(id){
        console.log(id);
        var row = $('#row' + id);
        
        row.toggleClass('d-none');
    }
    
</script>
{% endblock %}
