{% extends 'base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}

    <table class="table table-hover">
        <thead class="thead-light">
        <tr>
            <th class="px-1" scope="col">Mois</th>
            <th class="px-1" scope="col">Total</th>
        </tr>
        </thead>

        <tbody>
                {% for yearName, year in list %}
            <tr class="table-secondary">
                <th><a class="text-decoration-none text-black" href='{{path("music_date", {"year": yearName})}}'>{{ yearName }}</a></th>
                <td>{{ year.total|MsToHM }}</td>
            </tr>
        </tbody>
        <tbody>
            <div>
            {% for monthName, month in year %}
            {% if 'total' not in monthName and month != [] %}
            <tr>
                <td><a class="text-decoration-none text-black" href='{{path("music_date", {"year": yearName, "month": month.id})}}'>{{ monthName|capitalize|replace({"Fevrier": "Février", "Aout": "Août", "Decembre": "Décembre"}) }}</a></td>
                <td>{{ month.duration|MsToHM }}</td>
            <tr>
        {% endif %}
        {% endfor %}
            </div>
        </tbody>
        {% endfor %}
    </table>

{% endblock %}